<div class="container">
  <h1>Favourite</h1>
  <div class="col-12 col-md-8 col-lg-9">
    <hr />

    <div class="row favourBlock">

      {{#if goods.length}}

        {{#each goods}}
          <!-- Single Product -->
          <div class="col-12 col-sm-6 col-lg-4">
            <div class="single-product-wrapper">
              <!-- Product Image -->
              <div class="product-img">
                <img src="{{img}}" alt="" />
                <!-- Hover Thumb -->
                <img class="hover-img" src="{{hoverImg}}" alt="" />

                <!-- Product Badge -->
                <div class="product-badge new-badge">
                  <span>New</span>
                </div>

                <!-- Favourite -->
                <div class="product-favourite">
                  <a
                    data-id="{{_id}}"
                    data-csrf="{{@root.csurf}}"
                    data-page="favourites"
                    class="favme fa fa-heart active"
                  ></a>
                </div>
              </div>

              <!-- Product Description -->
              <div class="product-description">
                <span>topshop</span>
                <a href="single-product-details.html">
                  <h6>{{title}}</h6>
                </a>
                <p class="product-price">{{price}}</p>

                <!-- Hover Content -->
                <div class="hover-content">
                  <!-- Add to Cart -->
                  <form action="/cart/add" method="POST">
                    <div class="add-to-cart-btn">
                      <input
                        type="hidden"
                        name="_csrf"
                        value="{{@root.csurf}}"
                      />
                      <input type="hidden" name="name" value="{{title}}" />
                      <input type="hidden" name="price" value="{{price}}" />
                      <input type="hidden" name="id" value="{{_id}}" />
                      <button type="submit" class="btn essence-btn">Add to Cart</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>

        {{/each}}
      {{else}}

        <h1>There are nothing to love</h1>

      {{/if}}

    </div>
  </div>
</div>